@{
}

@model List<ApplicationInfo>


<table class="table table-bordered">
    <thead class="font-weight-bold table-striped">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model) 
        { 
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@x.ApplicationId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@x.ApplicationId">Delete</a></td>
        </tr>
        }
    </tbody>

</table>